<resources>

    <style name="Theme.CdekApp" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/light_gray_text</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="materialButtonStyle">@style/Widget.CdekApp.Button</item>
    </style>

    <style name="Theme.CdekApp.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.ActionMode</item>
    </style>

    <style name="Theme.CdekApp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="Theme.CdekApp.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Widget.AppBar" parent="Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/Theme.CdekApp.PopupTheme</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.CdekApp.HomeAsUpIndicator" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">?android:attr/homeAsUpIndicator</item>
        <item name="android:contentDescription">@string/back</item>
    </style>

    <style name="Widget.CdekApp.HomeAsUpIndicator.Gold" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">?android:attr/homeAsUpIndicator</item>
        <item name="android:tint">@color/colorPrimaryDark</item>
        <item name="android:contentDescription">@string/back</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:background">@color/colorAccent</item>
        <item name="background">@color/colorAccent</item>
        <item name="android:actionModeBackground">@color/colorAccent</item>
        <item name="actionModeBackground">@color/colorAccent</item>
        <item name="titleTextStyle">@style/TextAppearance.CdekApp.ActionMode.Title</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
        <item name="actionModeCloseButtonStyle">@style/Widget.CdekApp.ActionButton.CloseMode
        </item>
    </style>

    <style name="Widget.CdekApp.ActionButton.CloseMode" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.CdekApp.ActionMode.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.CdekApp.Title" parent="TextAppearance.MaterialComponents.Headline6" />

    <style name="TextAppearance.CdekApp.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.CdekApp.Body" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.CdekApp" parent="@android:style/Widget" />

    <style name="Widget.CdekApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:height">@dimen/button_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="Widget.CdekApp.Button.UnelevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:height">@dimen/button_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="Widget.CdekApp.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:height">@dimen/button_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="rippleColor">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.CdekApp.Button.TextButton.Icon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:height">@dimen/button_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconTint">#22201C</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#22201C</item>
    </style>

    <style name="Widget.CdekApp.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:height">@dimen/button_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="strokeColor">@color/light_gray_text</item>
        <item name="strokeWidth">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="Widget.CdekApp.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.CdekApp.Body</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing</item>
    </style>

    <style name="Widget.CdekApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:minHeight">100dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="Widget.CdekApp.CardView.Account" parent="Widget.CdekApp.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/background</item>
    </style>

    <style name="Widget.CdekApp.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipBackgroundColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.CdekApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundMode">none</item>
        <item name="android:textColorHintInverse">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:theme">@style/Theme.CdekApp</item>
        <item name="hintTextAppearance">@style/TextAppearance.CdekApp.TextInputHint</item>
    </style>

    <style name="Widget.CdekApp.TextInputLayout.Password" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundMode">none</item>
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="Widget.CdekApp.BorderlessButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">@dimen/padding_borderless_button</item>
        <item name="android:paddingBottom">@dimen/padding_borderless_button</item>
    </style>

    <style name="Widget.CdekApp.Dialog">
        <item name="android:background">@drawable/dialog_bg</item>
    </style>

    <style name="Widget.CdekApp.Text.Headline.Gray" parent="android:Widget.TextView">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textColor">@color/light_gray_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.CdekApp.Text.Headline.Black" parent="android:Widget.TextView">
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.CdekApp.Text.Body.Bold" parent="android:Widget.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.CdekApp.Text.Body.Normal" parent="android:Widget.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white_divider</item>
    </style>

    <style name="HorizontalLineBlack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="HorizontalLine.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_divider</item>
    </style>

    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance.CdekApp.TextInputHint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.CdekApp.DialogTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextAppearance.CdekApp.DialogContent" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextAppearance.CdekApp.DialogContent.Button" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Theme.CdekApp.Dialog" parent="@style/Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textViewStyle">@style/Widget.CdekApp.TextView</item>
    </style>
</resources>
